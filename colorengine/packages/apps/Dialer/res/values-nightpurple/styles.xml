<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.InCallScreen" parent="@*com.android.dialer:style/Theme.AppCompat.Light">
		<item name="android:textColorPrimary">@*com.android.dialer:color/incall_call_banner_text_color</item>
		<item name="android:buttonStyleToggle">@*com.android.dialer:style/InCallCompoundButton</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:actionBarStyle">@*com.android.dialer:style/InCallActionBarStyle</item>
		<item name="android:popupMenuStyle">@*com.android.dialer:style/InCallPopupMenuStyle</item>
		<item name="android:alertDialogTheme">@android:style/Theme.Material.Light.Dialog.Alert</item>
		<item name="android:colorPrimaryDark">@*com.android.dialer:color/dialer_theme_color_dark</item>
		<item name="*com.android.dialer:dialpad_key_button_touch_tint">@*com.android.dialer:color/incall_dialpad_touch_tint</item>
	</style>

	<style name="TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
		<item name="android:textSize">16.0sp</item>
		<item name="android:textColor">#ffffffff</item>
	</style>

	<style name="TextAppearanceSmall" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">14.0sp</item>
		<item name="android:textColor">#ffdddddd</item>
	</style>

	<style name="ListViewStyle" parent="@android:style/Widget.Material.ListView">
		<item name="android:overScrollMode">always</item>
	</style>

	<style name="ContactListFilterTheme" parent="@android:style/Theme.Holo">
		<item name="android:listViewStyle">@*com.android.dialer:style/ListViewStyle</item>
	</style>

	<style name="BackgroundOnlyTheme" parent="@android:style/Theme.Material">
		<item name="android:windowBackground">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@null</item>
		<item name="android:windowNoDisplay">true</item>
	</style>

	<style name="InCallPopupMenuStyle" parent="@android:style/Theme.Material">
		<item name="android:textColorPrimary">#ffffffff</item>
	</style>

	<style name="InCallActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
		<item name="android:textColor">#ffffffff</item>
	</style>

	<style name="DialtactsTheme1" parent="@android:style/Theme.Material"/>

	<style name="AlertDialogTheme" parent="@android:style/Theme.Material.Dialog">
		<item name="android:colorBackground">@android:color/black</item>
	</style>

	<style name="CallLogSpinnerStyle">
		<item name="android:textAppearance">@android:style/TextAppearance.Small</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:singleLine">true</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="DialtactsActionBarOverflow" parent="@android:style/Widget.Material.ActionButton.Overflow">
		<item name="android:src">@*com.android.dialer:drawable/ic_overflow_menu</item>
	</style>

	<style name="DialtactsActionBarOverflowWhite" parent="@android:style/Widget.Material.ActionButton.Overflow">
		<item name="android:src">@*com.android.dialer:drawable/overflow_menu</item>
	</style>

	<style name="DialtactsActionBarTabTextStyle" parent="@android:style/Widget.Material.ActionBar.TabText">
		<item name="android:textSize">@*com.android.dialer:dimen/tab_text_size</item>
		<item name="android:textColor">#ffffffff</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="Theme.CallSubjectDialogTheme" parent="@android:style/Theme.Material.Dialog">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowDrawsSystemBarBackgrounds">false</item>
		<item name="android:windowElevation">0.0dip</item>
	</style>
    <style name="Platform.V25.AppCompat.Light" parent="@android:style/Theme.Material.NoActionBar"/>

    <style name="SpeedDialtactsTheme" parent="android:Theme.Material">
        <item name="android:textColorPrimary">@color/dialtacts_primary_text_color</item>
        <item name="android:textColorSecondary">@color/dialtacts_secondary_text_color</item>

        <!-- Styles that require AppCompat compatibility, remember to update both sets -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle">@style/SpeedDialtactsActionBarStyle</item>
        <item name="actionBarStyle">@style/SpeedDialtactsActionBarStyle</item>
